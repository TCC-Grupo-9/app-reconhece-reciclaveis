resource "aws_security_group" "conexao_backend" {
  name_prefix = "conexao_backend"
  vpc_id = aws_vpc.vpc-tcc.id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  
   ingress {
    from_port   = 5432
    to_port     = 5432
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  
  tags = {
    Name = "sg-conexao_backend"
    Product = "tcc"
    Environment = "prod"
  }
}
